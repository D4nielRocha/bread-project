
<% layout('layout/boilerplate') %>

<h1>All Posts</h1>
<div>
    <a href="/bread/new">Add Post</a>
</div>
<ul>
    <% for(let each of bread){  %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img  class="img-fluid" src="<%= each.image%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= each.title %></h5>
                        <p class="card-text">
                            <small class="text-muted"><%= each.country %></small>
                        </p>
                        <p class="card-text"><%= each.recipe %></p>  
                        <a class="btn btn-md btn-primary" href="/bread/<%=each._id%> ">View <%= each.title %> </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

</ul>
